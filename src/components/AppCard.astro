---
interface Props {
  id: string;
  name: string;
  displayName: string;
  iconPath: string;
}

const { id, name, displayName, iconPath } = Astro.props;
const detailUrl = `${import.meta.env.BASE_URL}${id}/`;
---

<a href={detailUrl} class="app-card">
  <div class="app-card-icon">
    <img 
      src={iconPath} 
      alt={`${name} Logo`}
      width="80" 
      height="80"
      loading="lazy"
    />
  </div>
  <h2>{name}</h2>
  <p>{displayName}</p>
  <span class="app-card-arrow">â†’</span>
</a>

<style>
  .app-card {
    background: var(--card-bg);
    border: var(--glass-border);
    backdrop-filter: blur(12px);
    padding: 40px 32px;
    border-radius: 24px;
    text-align: center;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }
  
  .app-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .app-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px -10px rgba(37, 99, 235, 0.3);
  }
  
  .app-card:hover::before {
    opacity: 1;
  }
  
  .app-card-icon {
    width: 80px;
    height: 80px;
    border-radius: 20px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }
  
  .app-card:hover .app-card-icon {
    transform: scale(1.1);
  }
  
  .app-card-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .app-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-primary);
  }
  
  .app-card p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0;
  }
  
  .app-card-arrow {
    font-size: 1.5rem;
    color: var(--accent-primary);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }
  
  .app-card:hover .app-card-arrow {
    opacity: 1;
    transform: translateX(0);
  }
  
  @media (max-width: 768px) {
    .app-card {
      padding: 32px 24px;
    }
    
    .app-card h2 {
      font-size: 1.25rem;
    }
  }
</style>
